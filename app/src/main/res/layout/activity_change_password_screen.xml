<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profilescreen.subactivity.changepassword.ChangePasswordScreen">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:background="#3874A2">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/back_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Password"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:text="Change Password"
                android:textColor="#060606"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25sp"
                android:layout_marginBottom="10dp"
                android:text="set the new password for your account so you
can login and access all the features"
                android:textAlignment="center"
                android:textColor="#E1565656"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:text="Old Password"
                android:textColor="#505050"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginVertical="2dp"
                android:background="@drawable/border"
                android:hint="************************"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColorHint="#6C6B6B" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:text="New Password"
                android:textColor="#505050"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginVertical="2dp"
                android:background="@drawable/border"
                android:hint="************************"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColorHint="#505050" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:text="Confirm Password"
                android:textColor="#505050"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginVertical="2dp"
                android:background="@drawable/border"
                android:hint="************************"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColorHint="#505050" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#0F4C7C"
                android:text="change"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>